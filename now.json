{
	"project": "artsy-kb",
	"version": 2,
	"builds": [
		{
			"src": "assets/*",
			"use": "@now/static"
		},
		{
			"src": "src/api/**/*.js",
			"use": "@now/node"
		},
		{
			"src": "docs/*.md",
			"use": "@now/md",
			"config": {
				"language": "en",
				"css": "/assets/style.css"
			}
		},
		{ 
			"src": "README.md",
			"use": "@now/md",
			"config": {
				"language": "en",
				"css": "/assets/style.css"
			}
		}
	],
	"alias": "artsy-kb",
	"env": {
		"HGE_ENDPOINT": "@artsy_kb_graphql_url",
		"ADMIN_SECRET": "@artsy_kb_admin_token"
	},
	"routes": [
		{
			"src": "/create",
			"methods": ["GET"],
			"dest": "/src/api/create.js"
    },    
		{
			"src": "docs/(.*).md",
			"methods": ["GET"],
			"dest": "/docs/$1.html"
		},
		{
			"src": "/",
			"methods": ["GET"],
			"dest": "README.html"
		}
	]
}
